<% provide(:title, 'Athlete Profile') %>
<% provide(@athlete.full_name) %>

<p id="notice"><%= notice %></p>

<div class="row-fluid" "span12">
	<div class="span2">
		<p>
		</p>
	</div>

	<div class="span3">
		<h3>
		  <%= @athlete.full_name %>
		</h3>

			<p>
			  Class of <%= @athlete.graduation_year %>
			</p>

			<p>
			  <%= @athlete.high_school %>
			</p>

			<p>
			  <%= @athlete.city %>, <%= @athlete.state %>
			</p>

			<p>
			  Height: <%= @athlete.height_feet%>'<%= @athlete.height_inches%>" 
			</p>

			<p>
			  Weight: <%= @athlete.weight %>
			</p>

			<p>
			  GPA: <%= @athlete.gpa %>
			</p>

			<p>
			  SAT: <%= @athlete.sat %>
			</p>

			<p>
			  ACT: <%= @athlete.act %>
			</p>

			<p>
			  Class Rank: <%= @athlete.class_rank %>
			</p>
	</div>

	<div class="span4">
		<p>
		</p>
	</div>
</div>

<div class="row-fluid" "span12">
		<div class="span4" "container">
			<div>
			    <%= render 'shared/stats' %>
			</div>
			<div>	
				<%= render '/shared/micropost_form' %>
			</div>
		</div>
		<div class="span8" "container">
				<div>
					<%= render 'follow_form'%>
				</div>
			      <h3>Micropost Feed</h3>
			      <%= render '/shared/feed' %>
		</div>
	</ul>
</div>